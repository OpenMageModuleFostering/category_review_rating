<?xml version="1.0"?>
<config>
    <tabs>
        <precursor translate="label">
            <label>Precursor Extension</label>
            <sort_order>150</sort_order>
        </precursor>
    </tabs>
    <sections>
        <precursorconfig translate="label" module="categoryreview">
            <label>Category Reviews and Ratings</label>
            <tab>precursor</tab>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label comment">
                    <label>General Settings</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label comment">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>categoryreview/system_config_source_dropdown_enabled</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </enabled>
                        <averagerating translate="label comment">
                            <label>Show Average Ratings</label>
                            <frontend_type>select</frontend_type>
                            <source_model>categoryreview/system_config_source_dropdown_average</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </averagerating>
                        <addreviewtitle translate="label comment">
                            <label>Add Review Title</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </addreviewtitle>
                        <displayreviewtitle translate="label comment">
                            <label>Display Review Title</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </displayreviewtitle>
                    </fields>
                </general>
            </groups>
        </precursorconfig>
    </sections>
</config>